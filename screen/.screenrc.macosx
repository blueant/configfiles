defshell -bash
startup_message off
defscrollback 5000

# Launch these screens
screen -t macbox 0 -bash

logfile ~/.screen-logs/screen.log

#
# Hard Status
#
#hardstatus alwayslastline
#hardstatus string "%-w%{= BW}%50>%n %t%{-}%+w%<"

hardstatus alwayslastline
#what is displayed
hardstatus string '%{= kG}[ %{G}%H %{g}][%=%{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}]'
  
